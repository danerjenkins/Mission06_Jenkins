
@{
	ViewData["Title"] = "View Movies";
}
@model List<Movie>

<h1>View Movies</h1>

<table class="table table-striped table-bordered">
	<thead class="thead-dark">
	<tr>
		<td>Title</td>
		<td>Category</td>
		<td>Year</td>
		<td>Director</td>
		<td>Rating</td>
		<td>Edited</td>
		<td>Lent To</td>
		<td>Copied To Plex</td>
		<td>Notes</td>
	</tr>
	</thead>
	
	<tbody>
		@foreach (var movie in Model)
		{
			<tr>
				<td>@movie.Title</td>
				<td>@movie.Category</td>
				<td>@movie.Year</td>
				<td>@movie.Director</td>
				<td>@movie.Rating</td>
				<td>@movie.Edited</td>
				<td>@movie.LentTo</td>
				<td>@movie.CopiedToPlex</td>
				<td>@movie.Notes</td>
			</tr>
		}
	</tbody>
</table>